<div class="reg-login-form-header">
    <h2 class="thin">Register</h2>
</div>
<div class="reg-login-bg">
    <div class="row">
        <!-- Register form -->
        <div class="reg-login-form">
            <form action="/users/register" method="POST">
                <!-- Display any error or success messages -->
                {{> messages}}
                <div class="form-group">
                    <input type="username" id="username" name="username" class="form-control"
                        placeholder="Enter Username" value="{{username}}" maxlength="20"/>
                </div>
                <div class="form-group">
                    <input type="password" id="password" name="password" class="form-control"
                        placeholder="Create Password" maxlength="20"/>
                </div>
                <div class="form-group">
                    <input type="password" id="password2" name="password2" class="form-control"
                        placeholder="Confirm Password" maxlength="20"/>
                </div>
                <button type="submit" class="btn btn-primary btn-block">
                    Register
                </button>
            </form>
            <p class="lead mt-4">
                Have An Account? <a href="/users/login">Login</a>
            </p>
        </div>
    </div>
</div>